<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#666">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="修改会议纲要或补充子纲要"
        android:textColor="#fff" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="#666"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et1"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_top1"
            android:gravity="center"
            android:hint="输入提纲 1"
            android:textSize="16sp"
            android:visibility="visible" />

        <EditText
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:background="#fff"
            android:id="@+id/edit_1_1"
            android:layout_width="270dp"
            android:layout_height="27dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:hint="输入子提纲"
            android:textSize="14sp"
            android:visibility="visible" />

        <EditText
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:background="#fff"
            android:id="@+id/edit_1_2"
            android:layout_width="270dp"
            android:layout_height="27dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:hint="输入子提纲"
            android:textSize="14sp"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="#666"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et2"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_top2"
            android:gravity="center"
            android:hint="输入提纲 2"
            android:textSize="16sp"
            android:visibility="visible" />

        <EditText
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:background="#fff"
            android:id="@+id/edit_2_1"
            android:layout_width="270dp"
            android:layout_height="27dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:hint="输入子提纲"
            android:textSize="14sp"
            android:visibility="visible" />

        <EditText
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:background="#fff"
            android:id="@+id/edit_2_2"
            android:layout_width="270dp"
            android:layout_height="27dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:hint="输入子提纲"
            android:textSize="14sp"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="#666"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et3"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_top3"
            android:gravity="center"
            android:hint="输入提纲 3"
            android:textColor="#fff"
            android:visibility="visible" />

        <EditText
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:background="#fff"
            android:id="@+id/edit_3_1"
            android:layout_width="270dp"
            android:layout_height="27dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:hint="输入子提纲"
            android:textSize="14sp"
            android:visibility="visible" />

        <EditText
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:background="#fff"
            android:id="@+id/edit_3_2"
            android:layout_width="270dp"
            android:layout_height="27dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:hint="输入子提纲"
            android:textSize="14sp"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="#666"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et4"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_top4"
            android:gravity="center"
            android:hint="输入提纲 4"
            android:textSize="16sp"
            android:visibility="visible" />

        <EditText
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:background="#fff"
            android:id="@+id/edit_4_1"
            android:layout_width="270dp"
            android:layout_height="27dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:hint="输入子提纲"
            android:textSize="14sp"
            android:visibility="visible" />

        <EditText
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:background="#fff"
            android:id="@+id/edit_4_2"
            android:layout_width="270dp"
            android:layout_height="27dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:hint="输入子提纲"
            android:textSize="14sp"
            android:visibility="visible" />

    </LinearLayout>



    <Button

        android:id="@+id/btn_begin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/btn_begin"
        android:text=""
        />


    </LinearLayout>



    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="70dp"
        android:layout_height="70dp"
android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:visibility="gone" />



</RelativeLayout>